{
  "$schema": "http://json-schema.org/schema",
  "$id": "FuseFeatureSchema",
  "title": "Fuse Feature Module Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Feature module name (e.g., sp-year, user-management)",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "path": {
      "type": "string",
      "description": "Path where the feature will be created",
      "default": "src/app/modules/admin"
    },
    "prefix": {
      "type": "string",
      "description": "Component selector prefix",
      "default": "app",
      "alias": "p"
    },
    "skipForm": {
      "type": "boolean",
      "description": "Skip form component generation",
      "default": false
    }
  },
  "required": ["name"]
}
