{
  "$schema": "http://json-schema.org/schema",
  "$id": "FuseStarterSchema",
  "title": "Fuse Starter Project Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Project name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "directory": {
      "type": "string",
      "description": "The directory to create the project in",
      "alias": "dir"
    }
  },
  "required": ["name"]
}
